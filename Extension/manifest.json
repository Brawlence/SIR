{
	"name": "SIR Image Renamer",
	"short_name": "SIR",
	"description": "SIR is an Image Renamer.\nProvides meaningful image names when saving on Pixiv, Deviantart, Artstation, etc.",
	"icons": {
		"128": "SIR_128x128.png",
		"48": "SIR_48x48.png",
		"16": "SIR_16x16.png"
	},
	"page_action": {
		"default_icon": {
			"16": "SIR_16x16.png",
			"48": "SIR_48x48.png",
			"128": "SIR_128x128.png"
		},
		"default_title": "SIR!"
	},
	"version": "1.1.2",
	"manifest_version": 2,
	"permissions": ["downloads", "contextMenus"],
	"content_scripts": [
		{
			"matches": ["*://*.deviantart.com/*"],
			"css": ["DA/tagsStyle.css"],
			"run_at": "document_end",
			"js": ["DA/tagsParser.js", "Content.js"]
		},
		{
			"matches": ["*://*.artstation.com/*"],
			"css": ["AS/tagsStyle.css"],
			"run_at": "document_end",
			"js": ["AS/tagsParser.js", "Content.js"]
		},
		{
			"matches": ["*://*.pixiv.net/*", "*://*.pximg.net/*"],
			"css": ["PX/tagsStyle.css"],
			"run_at": "document_end",
			"js": ["PX/tagsParser.js", "Content.js"]
		},
		{
			"matches": ["*://*.tumblr.com/post/*", "*://*.tumblr.com/image/*"],
			"css": ["TU/tagsStyle.css"],
			"run_at": "document_end",
			"js": ["TU/tagsParser.js", "Content.js"]
		},
		{
			"matches": ["*://*.twitter.com/*", "*://*.twimg.com/*"],
			"css": ["TW/tagsStyle.css"],
			"run_at": "document_end",
			"js": ["TW/tagsParser.js", "Content.js"]
		},
		{
			"matches": ["*://*.hentai-foundry.com/*"],
			"css": ["HF/tagsStyle.css"],
			"run_at": "document_end",
			"js": ["HF/tagsParser.js", "Content.js"]
		},
		{
			"matches": ["*://drawfriends.booru.org/*s=view*"],
			"css": ["DF/tagsStyle.css"],
			"run_at": "document_end",
			"js": ["DF/tagsParser_content_script.js"]
		}
	],
	"background": {
		"scripts": ["Background.js"]
	},
	"commands": {
		"SIR_it": {
			"suggested_key": {
				"default": "Ctrl+Shift+1",
				"mac": "Command+Shift+1"
			},
			"description": "Shows the tags string generated from the image page"
		}
	}
}
