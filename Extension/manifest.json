{
	"name": "SIR Image Renamer",
	"short_name": "SIR",
	"description": "SIR is an Image Renamer.\nProvides meaningful image names when saving on Pixiv, Deviantart, Artstation, etc.",
	"icons": {
		"128": "SIR_128x128.png",
		"48": "SIR_48x48.png",
		"16": "SIR_16x16.png"
	},
	"page_action": {
		"default_icon": {
			"16": "SIR_16x16.png",
			"48": "SIR_48x48.png",
			"128": "SIR_128x128.png"
		},
		"default_title": "SIR!"
	},
	"version": "1.2.1",
	"manifest_version": 2,
	"permissions": ["downloads", "contextMenus"],
	"content_scripts": [
		{
			"matches": ["*://*.deviantart.com/*"],
			"run_at": "document_end",
			"js": ["DA_tagsParser.js", "Content.js"]
		},
		{
			"matches": ["*://*.artstation.com/*"],
			"run_at": "document_end",
			"js": ["AS_tagsParser.js", "Content.js"]
		},
		{
			"matches": ["*://*.pixiv.net/*", "*://*.pximg.net/*"],
			"run_at": "document_end",
			"js": ["PX_tagsParser.js", "Content.js"]
		},
		{
			"matches": ["*://*.tumblr.com/post/*", "*://*.tumblr.com/image/*"],
			"run_at": "document_end",
			"js": ["TU_tagsParser.js", "Content.js"]
		},
		{
			"matches": ["*://*.twitter.com/*", "*://*.twimg.com/*"],
			"run_at": "document_end",
			"js": ["TW_tagsParser.js", "Content.js"]
		},
		{
			"matches": ["*://*.hentai-foundry.com/*"],
			"run_at": "document_end",
			"js": ["HF_tagsParser.js", "Content.js"]
		},
		{
			"matches": ["*://drawfriends.booru.org/*s=view*"],
			"run_at": "document_end",
			"js": ["DF_tagsParser_content_script.js"]
		},
		{
			"matches": ["*://vidyart.booru.org/*s=view*"],
			"run_at": "document_end",
			"js": ["VA_tagsParser_content_script.js"]
		},
		{
			"matches": ["*://medicalwhiskey.com/?p=*"],
			"run_at": "document_end",
			"js": ["MW_tagsParser.js", "Content.js"]
		}
	],
	"background": {
		"scripts": ["Background.js"]
	},
	"commands": {
		"SIR_it": {
			"suggested_key": {
				"default": "Ctrl+Shift+1",
				"mac": "Command+Shift+1"
			},
			"description": "Shows the tags string generated from the image page"
		},
		"Decorate": {
			"suggested_key": {
				"default": "Ctrl+Shift+2",
				"mac": "Command+Shift+2"
			},
			"description": "Decorates discovered tags on the image page"
		}
	}
}
